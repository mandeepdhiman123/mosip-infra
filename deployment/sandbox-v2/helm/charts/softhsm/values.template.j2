serviceName: softhsm-{{hsm_prop.label}}

activeProfileEnv: mz 
springConfigLabel: {{ config_repo.branch }} 
configServerUrl: {{ config_server.internal_url }}`
artifactoryUrl: {{ artifactory_url }} 
containerUserId: {{ container_user_id }}
containerUserGid: {{ container_user_gid }}
containerWorkDir: {{ container_work_dir }}
podUserId: {{ pod_user_id }}
podUserGid: {{ pod_user_gid }}
service_account: {{ psp_service_account }}
docker:
  image: mosipdev/softhsm
  tag: v1
  ports:
    containerPort: 5666
    servicePort: 80

confFile: {{hsm_prop.conf_file}}
mountPath: /softhsm  # path inside docker

sc:
  name: ""
pv:
  name: softhsm-{{hsm_prop.label}}-pv
  size: 20Mi
pvc:
  name: softhsm-{{hsm_prop.label}}-pvc
  size: 20Mi 

nfs:
  server: {{ nfs.server }} 
  path: {{hsm_prop.nfs_path}}

probe:
  initialDelay: 15  # Seconds
  period: 30 # Seconds
healthUrl: ''
