name: postgres
defaultDb: keycloak # Default DB on Postgres
user: {{ postgres.user }} 
password: '' # To be passed directly with helm command
containerUserId: {{ container_user_id }}
containerUserGid: {{ container_user_gid }}
containerWorkDir: {{ container_work_dir }}
podUserId: {{ pod_user_id }}
podUserGid: {{ pod_user_gid }}
service_account: {{ psp_service_account }}
nfs:  # Must match nfs server params defined via Ansible
  server: {{ nfs.server }} 
  path: {{ postgres.nfs_path }}
pvc:
  name: postgres-pvc
  size: {{ postgres.size }}
pv:
  name: postgres-pv
  size: {{ postgres.size }}
sc: 
  name: ""

resources:
  requests:
    memory: 512Mi 
    cpu: 250m 
docker:
  image: postgres
  tag: 12.2
  containerPort: 5432
nodePort: {{ postgres.nodeport }}
maxConnections: {{ postgres.max_connections }} 
nodeAffinity:
  enabled: {{ postgres.node_affinity.enabled }}
  node: {{ postgres.node_affinity.node }}
  taint:
    key: {{ postgres.node_affinity.taint.key }}
    value: {{ postgres.node_affinity.taint.value }}
